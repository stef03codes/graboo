---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/main.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<meta name="generator" content={Astro.generator} />
		<title>Graboo</title>
	</head>
	<body>
		<Header/>
		<slot />
		<Footer/>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
	</body>
</html>

<script is:inline>
  const navbar = document.querySelector('.navbar');
  const videoSection = document.querySelector('.video-container');
  const navbaToggler = document.querySelector('.navbar-toggler i');

  window.onscroll = () => {
    // Check if the user has scrolled past the bottom of the video container
    if (window.scrollY > videoSection.offsetHeight - 50) {
      navbar.classList.add('bg-white');
	  navbar.classList.add('shadow');
	  navbaToggler.style.color = 'black'
    } else {
      navbar.classList.remove('bg-white');
	  navbar.classList.remove('shadow');
	  navbaToggler.style.color = 'white'
    }
  };
</script>